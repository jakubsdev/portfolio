  <style>
    .active {
      @apply text-violet-400;
    }
    #contact-first {
      position: relative;
      @apply text-violet-100;
    }
    #contact-first-overlay {
      display: flex;
      justify-content: center;
      align-items: center;
      height: 200%;
      width: 200%;
      clip-path: circle(0% at 0px 50%);
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      position: absolute;
      z-index: 10;
      @apply bg-violet-500 text-black;
    }
  </style>
</Layout>
