---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html class="scroll-smooth" lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Jakub Swietoniowski web developer portfolio"
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400&display=swap"
      rel="stylesheet"
    />
    <title>{title}</title>
  </head>
  <body class="w-full h-full bg-zinc-950">
    <div
      id="wrapper"
      class="bg-gradient-radial from-zinc-900/70 from-10% to-zinc-950 to-10% bg-[length:5vmin_5vmin] text-zinc-100 font-noto flex bg-zero"
    >
      <slot />
    </div>
  </body>
  <script>
    import "../scripts/app.ts";
  </script>
</html>
